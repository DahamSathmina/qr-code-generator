{
  "name": "ods-qrc-generator",
  "version": "1.2.0",
  "description": "Electron ODS QR Code Generator",
  "author": "Daham Sathmin <sathminadaham75@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.ods.qrcodegen",
    "productName": "ODS QRC Generator",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "Assets/ico/icon-512.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.1"
  }
}
